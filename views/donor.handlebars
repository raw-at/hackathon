<div class="container" style="positon:relative;top:250px;">

    <form class="well form-horizontal" action="/donor" method="POST"  id="contact_form" style="background-image:url('images/medicines.jpeg')">
<fieldset>

<!-- Form Name -->
<legend style="color:black">Donation Details</legend>


<!-- Text input-->
       <div class="form-group">
  <label class="col-md-4 control-label">Email</label>  
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
  <input name="email" placeholder="Email Address" class="form-control"  type="text">
    </div>
  </div>
</div>

<!-- Select Basic -->
   
<div class="form-group"> 
  <label class="col-md-4 control-label">Medicine Type</label>
    <div class="col-md-4 selectContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
    <select name="VolunteeringType" class="form-control selectpicker" >
      <option value=" " >Please select your Volunteering Type</option>
      <option>Cold relief</option>
      <option>Pain Killers</option>
      <option>Headache</option>
      <option>High Blood Pressure</option>
      <option>Other</option>
      </select>
  </div>
</div>
</div>


<!-- Text area -->
  
<div class="form-group">
  <label class="col-md-4 control-label">Medicine quantity description</label>
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
          <textarea class="form-control" name="medicine_quantity" placeholder="Areas Covered"></textarea>
  </div>
  </div>
</div>





<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label"></label>
  <div class="col-md-4">
    <button type="submit" class="btn btn-warning" >Send <span class="glyphicon glyphicon-send"></span></button>
  </div>
</div>

</fieldset>
</form>
</div>
    </div><!-- /.container -->